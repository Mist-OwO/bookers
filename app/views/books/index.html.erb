<h1>Books</h1>
<% @books.each do |book| %>

  <p>title</p>
  <span><%= book.title %></span>
  <p>body</p>
  <span><%= book.body %></span>
  
  <%= link_to book.title, book_path(book.id) %>
  
<% end %>

<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
	
  <h5>body</h5>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>