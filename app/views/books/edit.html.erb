<h1>Editing Book</h1>
<%= form_with(model:@book, local: true) do |form| %> <!--バリデーションチェック-->
  <% if @book.errors.any? %> <!--ここからエラ〜メッセージ-->
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<%= form_with model:@book, url:book_path(@book), local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  
  <p>
    <%= link_to "Show", book_path(@book.id) %>
     |
    <a href="/books/index">Back</a>
  </p>
<% end %>